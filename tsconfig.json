{
	"compilerOptions": {
		"target": "ES3",
		"ignoreDeprecations": "5.0",
		"moduleResolution": "node",
		"noLib": true,
		"strict": true,
		"types": ["global.d.ts", "ScriptUI.d.ts"],
		"typeRoots": ["./node_modules/types-for-adobe/shared"],
		"jsx": "react",
		"jsxFactory": "jsx",
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "dist"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["dist/**/*"]
}
